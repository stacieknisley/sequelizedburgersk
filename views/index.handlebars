{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. * Create a button in `index.handlebars`
that will submit the user input into the database. --}}

<div class="container bg">

    <div class="row">
        <div class="center col-sm-12">
            <img src="assets/img/burger.png" alt="Eat-Da-Burger">
            <h1>Eat-Da-Burger</h1>
            <p></p>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-6">

            <br>
            <h2>Burgers Available To Eat!</h2>

            <ul>
                {{#each burgers}} {{#unless devoured}}
                <li>
                    {{id}} {{burger_name}} {{!--
                    <form action="/api/burgers/post" method="POST"> --}}
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary devour-btn" data-id={{id}} data-status={{devoured}}>Devour It!</button>

                        {{!-- method=PUT" --}}
                </li>
                {{/unless}} {{/each}}
            </ul>

        </div>

        <div class="col-sm-6">

            <h2>Burgers That Have Been Eaten!</h2>

            {{#each burgers}} {{#if devoured}}
            <li>
                {{id}} {{burger_name}}

            </li> {{/if}} {{/each}}

        </div>

    </div>


    <div class="row">
        <div class="center col-sm-12">

            <h2>Add A Burger!</h2>

            <form class="create-update-form">


                <div class="form-group">
                    <p>Enter the burger you want to order and click the Submit Order button.</p>
                    <input type="text" id="ca" name="burger_name">
                </div>

                <button class="btn-primary" type="submit" id="add_burger">Submit Order</button>
            </form>

        </div>

    </div>

</div>